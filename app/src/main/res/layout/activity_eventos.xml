<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/regresar_48px"
            android:layout_marginTop="25dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/Inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/inicio_48px"
            android:layout_weight="5"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"/>

        <ImageView
            android:id="@+id/Buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/buscar_48px"
            android:layout_marginTop="25dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eventos"
        android:textColor="@color/azulGris"
        android:textSize="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="135dp"/>


    <ImageView
        android:id="@+id/btn_evento"
        android:layout_width="match_parent"
        android:layout_height="485dp"
        android:src="@drawable/evento1" />
    <TextView
        android:id="@+id/Nombre_Evento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Picnic Day!"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/gris"/>
    <TextView
        android:id="@+id/Hora_Evento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="14 de Marzo"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/gris"/>
</LinearLayout>