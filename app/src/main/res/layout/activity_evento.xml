<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/regresar_48px"
            android:layout_marginTop="25dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/Inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/inicio_48px"
            android:layout_weight="5"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"/>

        <ImageView
            android:id="@+id/Buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/buscar_48px"
            android:layout_marginTop="25dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Nombre_Evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Picnic Day!"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="45dp"
            android:textColor="@color/azulGris"/>

        <TextView
            android:id="@+id/Direccion_Evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡En parque los pioneros!"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="20dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/Fecha_Evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="14 de Marzo"
            android:textColor="@color/gris"
            android:textSize="25dp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/Hora_Evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:00 AM A 3:00 PM"
            android:textColor="@color/gris"
            android:textSize="20dp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/Descripcion_Evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="Diversion, entretenimiento y compañia totalmente gratuito para ti y tu consentido!  Solo debes traer el lonche de tu elección para ti y tu pequeño. Habra banquitas, almohadas y mantas para su comodidad. También habra venta de bebidas  refrescantes."
            android:textColor="@color/gris"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/Tipo_Evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evento Mensual!"
            android:textColor="@color/verdeOscuro"
            android:textSize="20dp"
            android:layout_marginTop="100dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/Organizador_Evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="organizadora: Lupita Ramirez"
            android:textColor="@color/verdeOscuro"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            />
    </LinearLayout>
</LinearLayout>