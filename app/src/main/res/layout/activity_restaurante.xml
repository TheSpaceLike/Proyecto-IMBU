<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/regresar_48px"
            android:layout_marginTop="25dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/Inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/inicio_48px"
            android:layout_weight="5"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"/>

        <ImageView
            android:id="@+id/Buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/buscar_48px"
            android:layout_marginTop="25dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Nombre_Restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Café Moka"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="45dp"
            android:textColor="@color/azulGris"/>

        <TextView
            android:id="@+id/Hora_Atencion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7 am a 9 pm"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="20dp"
            android:layout_marginTop="2dp"/>


        <TextView
            android:id="@+id/Descripcion_Restaurante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Deliciosos desayunos, Postres y Café, para pasar el dia con tus amigas. para tu niño cuenta con area de descanso y netflix"
            android:textAlignment="center"
            android:textColor="@color/gris"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Espacio abierto y accesible"
            android:textColor="@color/gris"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle allende y algo."
            android:textColor="@color/gris"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/Ver_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VER MENÚ"
            android:textColor="@color/verdeOscuro"
            android:textSize="20dp"
            android:layout_marginTop="100dp"
            android:textAlignment="center"/>

    </LinearLayout>

</LinearLayout>